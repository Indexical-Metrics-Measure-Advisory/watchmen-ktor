<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<root level="trace">
		<appender-ref ref="STDOUT"/>
	</root>
	<logger name="org.eclipse.jetty" level="INFO"/>
	<logger name="io.netty" level="INFO"/>
	<logger name="org.springframework.data.mongodb" level="INFO"/>
	<logger name="org.springframework.data.support" level="INFO"/>
	<logger name="org.springframework.data.convert" level="INFO"/>
	<logger name="org.mongodb.driver.connection" level="WARN"/>
	<logger name="org.mongodb.driver.cluster" level="WARN"/>
	<logger name="org.mongodb.driver.protocol.command" level="INFO"/>

	<logger name="Application" level="INFO"/>
</configuration>
